@model IEnumerable<LuckySpin.Models.Spin>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    int num = 1;
    string result;
}
<h1>Out of Luck</h1>
<h2>Final Balance: <span asp-for="Balance">@ViewBag.Balance.ToString("C")</span></h2>
<table>
    <thead><tr><th>Spin #</th><th>Result</th></tr></thead>
    <tbody>
        @foreach (LuckySpin.Models.Spin spin in @Model)
        {
            result = (spin.IsWinning) ? "Win" : "Lose";
            num += 1;
            <tr @if (spin.IsWinning)
                {<text> style='background-color:lightgreen;' </text> }
                >
                <td>@num</td>
                <td>@result</td>
            </tr>

        }
    </tbody>


</table>
<!-- A link to Play Again -->
@Html.ActionLink("Play Again", "Index")